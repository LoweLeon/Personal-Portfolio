          <div class="portfolio">
            <label for="portfolio-select">Portfolio Sections:</label>
            <select id="portfolio-select">
              <option value="">-- Select a Section --</option>
              <option value="name">Full Name</option>
              <option value="education">Education</option>
              <option value="projects">Projects</option>
              <option value="skills">Skills</option>
              <option value="affiliation">Affiliation</option>
              <option value="research">Research</option>
            </select>
      
            <div id="portfolio-content" class="portfolio-content"></div>
          </div>
        </div>
      
        <script>
          const select = document.getElementById('portfolio-select');
          const content = document.getElementById('portfolio-content');
      
          const data = {
            name: "Robert Joshua de Leon",
            education: "Currently enrolled in BS Information Technology, Section IT 2A.",
            projects: "Placeholder for project descriptions or links to portfolios.",
            skills: "Placeholder for technical and soft skills.",
            affiliation: "Optional affiliation details can go here.",
            research: "Optional research summary or topics of interest."
          };
      
          select.addEventListener('change', () => {
            const value = select.value;
            if (value && data[value]) {
              content.style.display = 'block';
              content.textContent = data[value];
            } else {
              content.style.display = 'none';
              content.textContent = '';
            }
          });
        </script>
